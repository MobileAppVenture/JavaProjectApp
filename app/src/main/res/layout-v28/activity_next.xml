<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow">

    <TextView
        android:id="@+id/textView"
        style="@style/TitleText"
        android:text="@string/TitleSelectImage" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/gallery"
            style="@style/AppImageButton"
            android:layout_marginEnd="60dp"
            android:contentDescription="@string/SelectInFiles"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/photo"
            style="@style/AppImageButton"
            android:layout_marginStart="13dp"
            android:contentDescription="@string/UseCamera"
            android:src="@android:drawable/ic_menu_camera" />

    </LinearLayout>

    <ImageView
        android:id="@+id/instruction"
        android:layout_width="356dp"
        android:layout_height="349dp"
        android:layout_below="@id/buttonContainer"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/ImageInstruction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton2"
            style="@style/AppMaterialButtonBar"
            android:text="@string/buttonNext"
            android:layout_width="0dp"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/history"
            style="@style/AppMaterialButtonBar"
            android:layout_width="0dp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/HistoryTitle" />

    </LinearLayout>


</RelativeLayout>