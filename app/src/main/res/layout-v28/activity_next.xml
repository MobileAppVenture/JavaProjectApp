<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/angkor"
        android:text="@string/TitleSelectImage"
        android:textColor="@color/textColor"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="115dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="156dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="@color/textColor"
        android:contentDescription="@string/SelectInFiles"/>

    <ImageButton
        android:id="@+id/photo"
        android:layout_width="115dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="62dp"
        android:background="@color/textColor"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="@string/UseCamera"/>

    <ImageView
        android:id="@+id/instruction"
        android:layout_width="273dp"
        android:layout_height="222dp"
        android:layout_above="@id/nextButton2"
        android:layout_below="@id/gallery"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="74dp"
        android:contentDescription="@string/ImageInstruction" />

    <Button
        android:id="@+id/nextButton2"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="130sp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/angkor"
        android:text="@string/buttonNext"
        android:textSize="20sp" />

</RelativeLayout>