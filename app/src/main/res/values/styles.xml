<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/angkor</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppMaterialButtonNext" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/angkor</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:background">@color/purple</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppMaterialButtonBar" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/angkor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>